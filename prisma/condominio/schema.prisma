// Schema para las bases de datos de cada condominio
// Este schema se aplicará a cada base de datos de condominio
// NOTA: Este schema se usa solo para db push, no genera cliente
// El cliente se genera desde schema.prisma principal
// La URL de conexión se pasa como parámetro: --url="..."

datasource condominio_db {
  provider = "cockroachdb"
}

enum UserRole {
  ADMIN
  PROPIETARIO
  ARRENDATARIO
  RESIDENTE
}

model User {
  id               String    @id
  name             String
  email            String
  emailVerified    Boolean   @default(false)
  image            String?
  firstName        String?
  lastName         String?
  tipoDocumento    TipoDocumento?
  numeroDocumento  String?
  telefono         String?
  active           Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  role             UserRole  @default(ADMIN)
  unidadId         String?
  unidad           Unidad?   @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  sessions         Session[]
  accounts         Account[]
  reservas         Reserva[]
  facturas         Factura[]
  pagos            Pago[]
  tickets          Ticket[]
  ticketComments   TicketComment[]
  posts            Post[]
  postComments     PostComment[]
  postLikes        PostLike[]

  @@unique([email])
  @@unique([numeroDocumento])
  @@index([unidadId])
  @@index([active])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

enum TipoUnidad {
  APARTAMENTO
  CASA
  LOCAL_COMERCIAL
}

enum EstadoUnidad {
  OCUPADA
  VACIA
  EN_MANTENIMIENTO
}

enum TipoDocumento {
  CC
  CE
  PASAPORTE
  NIT
  OTRO
}

enum TipoEspacio {
  SALON_SOCIAL
  ZONA_BBQ
  SAUNA
  CASA_EVENTOS
  GIMNASIO
  PISCINA
  CANCHA_DEPORTIVA
  PARQUEADERO
  OTRO
}

enum UnidadTiempoReserva {
  HORAS
  DIAS
  MESES
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADA
  CANCELADA
  COMPLETADA
}

enum EstadoFactura {
  PENDIENTE
  ENVIADA
  PAGADA
  VENCIDA
  CANCELADA
}

enum EstadoPago {
  PENDIENTE
  PROCESANDO
  APROBADO
  RECHAZADO
  CANCELADO
}

enum MetodoPago {
  WOMPI
  EFECTIVO
}

enum EstadoTicket {
  ABIERTO
  EN_PROGRESO
  RESUELTO
  CERRADO
}

model Unidad {
  id                        String        @id @default(uuid())
  identificador             String        // Ej: "Casa 127", "Apto 801"
  tipo                      TipoUnidad
  area                      Float?        // Área en m²
  coeficienteCopropiedad    Float?        // Coeficiente de copropiedad (%)
  valorCuotaAdministracion  Float?        // Valor de la cuota de administración
  estado                    EstadoUnidad @default(VACIA)
  createdAt                 DateTime      @default(now())
  updatedAt                 DateTime      @updatedAt
  users                     User[]
  reservas                  Reserva[]
  facturas                  Factura[]
  tickets                   Ticket[]
  posts                     Post[]

  @@unique([identificador])
  @@map("unidad")
}

// Espacios comunes disponibles para reserva (ej: Salón Social, Zona BBQ, Sauna)
model EspacioComun {
  id                String               @id @default(uuid())
  nombre            String               // Ej: "Salón Social", "Zona BBQ"
  tipo              TipoEspacio
  capacidad         Int                  // Capacidad máxima de personas
  descripcion       String?
  unidadTiempo      UnidadTiempoReserva  // HORAS, DIAS o MESES
  precioPorUnidad   Float?               // Precio por unidad de tiempo (opcional)
  activo            Boolean              @default(true)
  imagen            String?              // URL de imagen del espacio
  // Horarios de disponibilidad (JSON: array de días de la semana y horas)
  // Ejemplo: [{"dia": 1, "horaInicio": "09:00", "horaFin": "22:00"}, {"dia": 2, "horaInicio": "09:00", "horaFin": "22:00"}]
  // día: 0=Domingo, 1=Lunes, ..., 6=Sábado
  horariosDisponibilidad String?         // JSON string con horarios
  requiereAprobacion    Boolean          @default(true) // Si requiere aprobación de ADMIN
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  reservas          Reserva[]

  @@index([tipo])
  @@index([activo])
  @@map("espacio_comun")
}

// Reservas de espacios comunes
model Reserva {
  id                String        @id @default(uuid())
  espacioComunId    String
  espacioComun      EspacioComun @relation(fields: [espacioComunId], references: [id], onDelete: Restrict)
  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?       // Unidad relacionada (opcional, para casas con espacios para eventos)
  unidad            Unidad?       @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  fechaInicio       DateTime
  fechaFin          DateTime
  cantidadPersonas  Int?
  estado            EstadoReserva @default(PENDIENTE)
  motivo            String?       // Motivo de la reserva
  observaciones     String?
  precioTotal       Float?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?       // ID del usuario que creó la reserva (puede ser admin)

  @@index([espacioComunId])
  @@index([userId])
  @@index([unidadId])
  @@index([espacioComunId])
  @@index([userId])
  @@index([unidadId])
  @@index([fechaInicio])
  @@index([fechaFin])
  @@index([estado])
  @@map("reserva")
}

// Facturas de administración mensual para unidades
model Factura {
  id                    String        @id @default(uuid())
  numeroFactura         String        // Número único de factura (ej: "FAC-2026-001")
  unidadId              String
  unidad                Unidad        @relation(fields: [unidadId], references: [id], onDelete: Restrict)
  userId                String?       // Usuario responsable del pago (propietario o arrendatario)
  user                  User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  periodo               String        // Período de facturación (ej: "2026-01" para enero 2026)
  fechaEmision          DateTime      @default(now())
  fechaVencimiento      DateTime      // Fecha límite de pago
  valor                 Float         // Valor de la cuota de administración
  descripcion           String?       // Descripción de la factura
  estado                EstadoFactura @default(PENDIENTE)
  fechaEnvio            DateTime?     // Fecha en que se envió la factura al usuario
  fechaPago             DateTime?     // Fecha en que se pagó
  observaciones         String?       // Observaciones adicionales
  createdBy             String?       // ID del usuario admin que creó la factura
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  pagos                 Pago[]        // Pagos asociados a esta factura

  @@unique([numeroFactura])
  @@index([unidadId])
  @@index([userId])
  @@index([periodo])
  @@index([estado])
  @@index([fechaVencimiento])
  @@map("factura")
}

// Pagos realizados para facturas
model Pago {
  id                    String        @id @default(uuid())
  facturaId             String
  factura               Factura       @relation(fields: [facturaId], references: [id], onDelete: Restrict)
  userId                String?       // Usuario que realizó el pago
  user                  User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  valor                 Float         // Valor del pago
  metodoPago            MetodoPago    @default(WOMPI)
  estado                EstadoPago    @default(PENDIENTE)
  // Información de Wompi
  wompiTransactionId    String?       // ID de la transacción en Wompi
  wompiReference        String?       // Referencia de pago en Wompi
  wompiPaymentLink      String?       // Link de pago generado por Wompi
  wompiResponse         String?       // Respuesta completa de Wompi (JSON)
  // Información adicional
  fechaPago             DateTime?     // Fecha en que se procesó el pago
  observaciones         String?       // Observaciones del pago
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  @@index([facturaId])
  @@index([userId])
  @@index([estado])
  @@index([wompiTransactionId])
  @@index([wompiReference])
  @@map("pago")
}

// Tickets de administración (solicitudes de mantenimiento, problemas, etc.)
model Ticket {
  id                String          @id @default(uuid())
  titulo            String          // Título del ticket
  descripcion       String          // Descripción detallada del problema/solicitud
  estado            EstadoTicket     @default(ABIERTO)
  categoria         String?         // Categoría del ticket (ej: "Iluminación", "Poda", "Limpieza")
  prioridad         String?         @default("MEDIA") // BAJA, MEDIA, ALTA, URGENTE
  userId            String          // Usuario que creó el ticket
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?         // Unidad relacionada (opcional)
  unidad            Unidad?         @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  asignadoA         String?         // ID del usuario ADMIN asignado al ticket
  fechaResolucion   DateTime?       // Fecha en que se resolvió el ticket
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  comments          TicketComment[] // Comentarios del ticket

  @@index([userId])
  @@index([unidadId])
  @@index([estado])
  @@index([categoria])
  @@index([asignadoA])
  @@index([createdAt])
  @@map("ticket")
}

// Comentarios en tickets
model TicketComment {
  id                String          @id @default(uuid())
  ticketId          String
  ticket            Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  contenido         String          // Contenido del comentario
  esInterno         Boolean         @default(false) // Si es true, solo lo ven los ADMIN
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([ticketId])
  @@index([userId])
  @@index([createdAt])
  @@map("ticket_comment")
}

// Posts del foro comunitario
model Post {
  id                String          @id @default(uuid())
  titulo            String?         // Título del post (opcional)
  contenido         String          // Contenido del post
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?         // Unidad del usuario que creó el post (opcional, para mostrar "Casa 89")
  unidad            Unidad?         @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  imagen            String?         // URL de imagen adjunta (opcional)
  activo            Boolean         @default(true) // Si está activo o eliminado
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  comments          PostComment[]   // Comentarios del post
  likes             PostLike[]      // Likes del post

  @@index([userId])
  @@index([unidadId])
  @@index([activo])
  @@index([createdAt])
  @@map("post")
}

// Comentarios en posts del foro
model PostComment {
  id                String          @id @default(uuid())
  postId            String
  post              Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  contenido         String          // Contenido del comentario
  activo            Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([postId])
  @@index([userId])
  @@index([createdAt])
  @@map("post_comment")
}

// Likes en posts del foro
model PostLike {
  id                String          @id @default(uuid())
  postId            String
  post              Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime        @default(now())

  @@unique([postId, userId]) // Un usuario solo puede dar like una vez por post
  @@index([postId])
  @@index([userId])
  @@map("post_like")
}

