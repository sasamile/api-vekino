// Schema para las bases de datos de cada condominio
// Este schema se aplicar谩 a cada base de datos de condominio
// NOTA: Este schema se usa solo para db push, no genera cliente
// El cliente se genera desde schema.prisma principal
// La URL de conexi贸n se pasa como par谩metro: --url="..."

datasource condominio_db {
  provider = "cockroachdb"
}

enum UserRole {
  ADMIN
  PROPIETARIO
  ARRENDATARIO
  RESIDENTE
}

model User {
  id               String    @id
  name             String
  email            String
  emailVerified    Boolean   @default(false)
  image            String?
  firstName        String?
  lastName         String?
  tipoDocumento    TipoDocumento?
  numeroDocumento  String?
  telefono         String?
  active           Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  role             UserRole  @default(ADMIN)
  unidadId         String?
  unidad           Unidad?   @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  sessions         Session[]
  accounts         Account[]
  reservas         Reserva[]
  facturas         Factura[]
  pagos            Pago[]
  tickets          Ticket[]
  ticketComments   TicketComment[]
  posts            Post[]
  postComments     PostComment[]
  postReactions    PostReaction[]
  chatMessagesSent     ChatMessage[] @relation("ChatMessagesSent")
  chatMessagesReceived ChatMessage[] @relation("ChatMessagesReceived")

  @@unique([email])
  @@unique([numeroDocumento])
  @@index([unidadId])
  @@index([active])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

enum TipoUnidad {
  APARTAMENTO
  CASA
  LOCAL_COMERCIAL
}

enum EstadoUnidad {
  OCUPADA
  VACIA
  EN_MANTENIMIENTO
}

enum TipoDocumento {
  CC
  CE
  PASAPORTE
  NIT
  OTRO
}

enum TipoEspacio {
  SALON_SOCIAL
  ZONA_BBQ
  SAUNA
  CASA_EVENTOS
  GIMNASIO
  PISCINA
  CANCHA_DEPORTIVA
  PARQUEADERO
  OTRO
}

enum UnidadTiempoReserva {
  HORAS
  DIAS
  MESES
}

enum EstadoReserva {
  PENDIENTE
  CONFIRMADA
  CANCELADA
  COMPLETADA
}

enum EstadoFactura {
  PENDIENTE
  ENVIADA
  PAGADA
  VENCIDA
  CANCELADA
}

enum EstadoPago {
  PENDIENTE
  PROCESANDO
  APROBADO
  RECHAZADO
  CANCELADO
}

enum MetodoPago {
  WOMPI
  EFECTIVO
}

enum EstadoTicket {
  ABIERTO
  EN_PROGRESO
  RESUELTO
  CERRADO
}

model Unidad {
  id                        String        @id @default(uuid())
  identificador             String        // Ej: "Casa 127", "Apto 801"
  tipo                      TipoUnidad
  area                      Float?        // rea en m虏
  coeficienteCopropiedad    Float?        // Coeficiente de copropiedad (%)
  valorCuotaAdministracion  Float?        // Valor de la cuota de administraci贸n
  estado                    EstadoUnidad @default(VACIA)
  createdAt                 DateTime      @default(now())
  updatedAt                 DateTime      @updatedAt
  users                     User[]
  reservas                  Reserva[]
  facturas                  Factura[]
  tickets                   Ticket[]
  posts                     Post[]

  @@unique([identificador])
  @@map("unidad")
}

// Espacios comunes disponibles para reserva (ej: Sal贸n Social, Zona BBQ, Sauna)
model EspacioComun {
  id                String               @id @default(uuid())
  nombre            String               // Ej: "Sal贸n Social", "Zona BBQ"
  tipo              TipoEspacio
  capacidad         Int                  // Capacidad m谩xima de personas
  descripcion       String?
  unidadTiempo      UnidadTiempoReserva  // HORAS, DIAS o MESES
  precioPorUnidad   Float?               // Precio por unidad de tiempo (opcional)
  activo            Boolean              @default(true)
  imagen            String?              // URL de imagen del espacio
  // Horarios de disponibilidad (JSON: array de d铆as de la semana y horas)
  // Ejemplo: [{"dia": 1, "horaInicio": "09:00", "horaFin": "22:00"}, {"dia": 2, "horaInicio": "09:00", "horaFin": "22:00"}]
  // d铆a: 0=Domingo, 1=Lunes, ..., 6=S谩bado
  horariosDisponibilidad String?         // JSON string con horarios
  requiereAprobacion    Boolean          @default(true) // Si requiere aprobaci贸n de ADMIN
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt
  reservas          Reserva[]

  @@index([tipo])
  @@index([activo])
  @@map("espacio_comun")
}

// Reservas de espacios comunes
model Reserva {
  id                String        @id @default(uuid())
  espacioComunId    String
  espacioComun      EspacioComun @relation(fields: [espacioComunId], references: [id], onDelete: Restrict)
  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?       // Unidad relacionada (opcional, para casas con espacios para eventos)
  unidad            Unidad?       @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  fechaInicio       DateTime
  fechaFin          DateTime
  cantidadPersonas  Int?
  estado            EstadoReserva @default(PENDIENTE)
  motivo            String?       // Motivo de la reserva
  observaciones     String?
  precioTotal       Float?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  createdBy         String?       // ID del usuario que cre贸 la reserva (puede ser admin)

  @@index([espacioComunId])
  @@index([userId])
  @@index([unidadId])
  @@index([espacioComunId])
  @@index([userId])
  @@index([unidadId])
  @@index([fechaInicio])
  @@index([fechaFin])
  @@index([estado])
  @@map("reserva")
}

// Facturas de administraci贸n mensual para unidades
model Factura {
  id                    String        @id @default(uuid())
  numeroFactura         String        // N煤mero 煤nico de factura (ej: "FAC-2026-001")
  unidadId              String
  unidad                Unidad        @relation(fields: [unidadId], references: [id], onDelete: Restrict)
  userId                String?       // Usuario responsable del pago (propietario o arrendatario)
  user                  User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  periodo               String        // Per铆odo de facturaci贸n (ej: "2026-01" para enero 2026)
  fechaEmision          DateTime      @default(now())
  fechaVencimiento      DateTime      // Fecha l铆mite de pago
  valor                 Float         // Valor de la cuota de administraci贸n
  descripcion           String?       // Descripci贸n de la factura
  estado                EstadoFactura @default(PENDIENTE)
  fechaEnvio            DateTime?     // Fecha en que se envi贸 la factura al usuario
  fechaPago             DateTime?     // Fecha en que se pag贸
  observaciones         String?       // Observaciones adicionales
  createdBy             String?       // ID del usuario admin que cre贸 la factura
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  pagos                 Pago[]        // Pagos asociados a esta factura

  @@unique([numeroFactura])
  @@index([unidadId])
  @@index([userId])
  @@index([periodo])
  @@index([estado])
  @@index([fechaVencimiento])
  @@map("factura")
}

// Pagos realizados para facturas
model Pago {
  id                    String        @id @default(uuid())
  facturaId             String
  factura               Factura       @relation(fields: [facturaId], references: [id], onDelete: Restrict)
  userId                String?       // Usuario que realiz贸 el pago
  user                  User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  valor                 Float         // Valor del pago
  metodoPago            MetodoPago    @default(WOMPI)
  estado                EstadoPago    @default(PENDIENTE)
  // Informaci贸n de Wompi
  wompiTransactionId    String?       // ID de la transacci贸n en Wompi
  wompiReference        String?       // Referencia de pago en Wompi
  wompiPaymentLink      String?       // Link de pago generado por Wompi
  wompiResponse         String?       // Respuesta completa de Wompi (JSON)
  // Informaci贸n adicional
  fechaPago             DateTime?     // Fecha en que se proces贸 el pago
  observaciones         String?       // Observaciones del pago
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  @@index([facturaId])
  @@index([userId])
  @@index([estado])
  @@index([wompiTransactionId])
  @@index([wompiReference])
  @@map("pago")
}

// Tickets de administraci贸n (solicitudes de mantenimiento, problemas, etc.)
model Ticket {
  id                String          @id @default(uuid())
  titulo            String          // T铆tulo del ticket
  descripcion       String          // Descripci贸n detallada del problema/solicitud
  estado            EstadoTicket     @default(ABIERTO)
  categoria         String?         // Categor铆a del ticket (ej: "Iluminaci贸n", "Poda", "Limpieza")
  prioridad         String?         @default("MEDIA") // BAJA, MEDIA, ALTA, URGENTE
  userId            String          // Usuario que cre贸 el ticket
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?         // Unidad relacionada (opcional)
  unidad            Unidad?         @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  asignadoA         String?         // ID del usuario ADMIN asignado al ticket
  fechaResolucion   DateTime?       // Fecha en que se resolvi贸 el ticket
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  comments          TicketComment[] // Comentarios del ticket

  @@index([userId])
  @@index([unidadId])
  @@index([estado])
  @@index([categoria])
  @@index([asignadoA])
  @@index([createdAt])
  @@map("ticket")
}

// Comentarios en tickets
model TicketComment {
  id                String          @id @default(uuid())
  ticketId          String
  ticket            Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  contenido         String          // Contenido del comentario
  esInterno         Boolean         @default(false) // Si es true, solo lo ven los ADMIN
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([ticketId])
  @@index([userId])
  @@index([createdAt])
  @@map("ticket_comment")
}

// Posts del foro comunitario
model Post {
  id                String          @id @default(uuid())
  titulo            String?         // T铆tulo del post (opcional)
  contenido         String          // Contenido del post
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidadId          String?         // Unidad del usuario que cre贸 el post (opcional, para mostrar "Casa 89")
  unidad            Unidad?         @relation(fields: [unidadId], references: [id], onDelete: SetNull)
  activo            Boolean         @default(true) // Si est谩 activo o eliminado
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  comments          PostComment[]   // Comentarios del post
  reactions         PostReaction[]  // Reacciones del post
  attachments       PostAttachment[] // Archivos adjuntos (im谩genes, videos, audio, documentos)

  @@index([userId])
  @@index([unidadId])
  @@index([activo])
  @@index([createdAt])
  @@map("post")
}

// Comentarios en posts del foro
model PostComment {
  id                String          @id @default(uuid())
  postId            String
  post              Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  contenido         String          // Contenido del comentario
  activo            Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([postId])
  @@index([userId])
  @@index([createdAt])
  @@map("post_comment")
}

// Reacciones en posts del foro (me gusta, amor, risa, sorpresa, tristeza, enojo)
enum TipoReaccion {
  LIKE      // 
  LOVE      // わ
  LAUGH     // 
  WOW       // 
  SAD       // 
  ANGRY     // 
}

model PostReaction {
  id                String          @id @default(uuid())
  postId            String
  post              Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tipo              TipoReaccion   @default(LIKE)
  createdAt         DateTime        @default(now())

  @@unique([postId, userId]) // Un usuario solo puede tener una reacci贸n por post (puede cambiarla)
  @@index([postId])
  @@index([userId])
  @@index([tipo])
  @@map("post_reaction")
}

// Archivos adjuntos en posts (im谩genes, videos, audio, documentos)
enum TipoArchivo {
  IMAGEN
  VIDEO
  AUDIO
  DOCUMENTO
}

model PostAttachment {
  id                String          @id @default(uuid())
  postId            String
  post              Post            @relation(fields: [postId], references: [id], onDelete: Cascade)
  tipo              TipoArchivo     // Tipo de archivo
  url               String          // URL del archivo almacenado
  nombre            String?         // Nombre original del archivo
  tama帽o            Int?            // Tama帽o en bytes
  mimeType          String?         // Tipo MIME del archivo
  thumbnailUrl      String?         // URL del thumbnail (para videos)
  createdAt         DateTime        @default(now())

  @@index([postId])
  @@index([tipo])
  @@map("post_attachment")
}

// Mensajes de chat entre usuarios
model ChatMessage {
  id                String          @id @default(uuid())
  remitenteId       String          // Usuario que env铆a el mensaje
  remitente         User            @relation("ChatMessagesSent", fields: [remitenteId], references: [id], onDelete: Cascade)
  destinatarioId    String          // Usuario que recibe el mensaje
  destinatario      User            @relation("ChatMessagesReceived", fields: [destinatarioId], references: [id], onDelete: Cascade)
  contenido         String          // Contenido del mensaje
  leido             Boolean         @default(false) // Si el mensaje fue le铆do
  leidoAt           DateTime?       // Fecha en que se ley贸 el mensaje
  createdAt         DateTime        @default(now())
  attachments       ChatAttachment[] // Archivos adjuntos en el mensaje

  @@index([remitenteId])
  @@index([destinatarioId])
  @@index([leido])
  @@index([createdAt])
  @@map("chat_message")
}

// Archivos adjuntos en mensajes de chat
model ChatAttachment {
  id                String          @id @default(uuid())
  mensajeId         String
  mensaje           ChatMessage     @relation(fields: [mensajeId], references: [id], onDelete: Cascade)
  tipo              TipoArchivo     // Tipo de archivo
  url               String          // URL del archivo almacenado
  nombre            String?         // Nombre original del archivo
  tama帽o            Int?            // Tama帽o en bytes
  mimeType          String?         // Tipo MIME del archivo
  createdAt         DateTime        @default(now())

  @@index([mensajeId])
  @@index([tipo])
  @@map("chat_attachment")
}

